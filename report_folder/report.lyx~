\begin_layout Subsection*
Answer 3:
\end_layout

\begin_layout Standard
State equation
\end_layout

\begin_layout Standard
Applying KVL in Loop i1:
\end_layout

\begin_layout Standard
\begin_inset Formula $V_{1}-i_{1}R_{1}-L_{1}\frac{di_{1}}{dt}-V_{C_{1}}=0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{di_{1}}{dt}=\frac{V_{1}}{L_{1}}-\frac{V_{C_{1}}}{L_{1}}-\frac{i_{1}R_{1}}{L_{1}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\dot{i}_{1}=\frac{V_{1}}{L_{1}}-\frac{V_{C_{1}}}{L_{1}}-\frac{i_{1}R_{1}}{L_{1}}$
\end_inset


\end_layout

\begin_layout Standard
At node Vc1:
\end_layout

\begin_layout Standard
\begin_inset Formula $V_{C_{1}}=\frac{1}{C_{1}}\int(i_{1}-i_{2})dt$
\end_inset


\end_layout

\begin_layout Standard
differentiating both side with respect to 
\begin_inset Formula $t$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{dV_{C_{1}}}{dt}=\frac{i_{1}}{C_{1}}-\frac{i_{2}}{C_{1}}$
\end_inset


\end_layout

\begin_layout Standard
Applying KVL in Loop i2:
\end_layout

\begin_layout Standard
\begin_inset Formula $V_{C_{1}}-i_{2}R_{2}-L_{2}\frac{di_{2}}{dt}-V_{C_{2}}=0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{di_{2}}{dt}=\frac{V_{C_{1}}}{L_{2}}-\frac{V_{C_{2}}}{L_{2}}-\frac{i_{2}R_{2}}{L_{2}}$
\end_inset


\end_layout

\begin_layout Standard
At node Vc2:
\end_layout

\begin_layout Standard
\begin_inset Formula $V_{C_{2}}=\frac{1}{C_{2}}\int(i_{2}-i_{3})dt$
\end_inset


\end_layout

\begin_layout Standard
differentiating both side with respect to 
\begin_inset Formula $t$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{dV_{C_{2}}}{dt}=\frac{i_{2}}{C_{2}}-\frac{i_{3}}{C_{2}}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{dV_{C_{2}}}{dt}=\frac{i_{2}}{C_{2}}-\frac{V_{C_{2}}}{R_{3}C_{2}}$
\end_inset


\end_layout

