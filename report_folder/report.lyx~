\begin_layout Standard
\align block
\begin_inset Formula $\frac{dx_{1}}{dx}=x_{2}$
\end_inset


\end_layout

\begin_layout Standard
\align block
or
\begin_inset Formula $\dot{x}_{1}=x_{2}$
\end_inset


\begin_inset CommandInset label
LatexCommand label
name "Equation1"

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $M\frac{d^{2}x_{1}}{dx^{2}}+b\frac{dx_{1}}{dx}+kx_{1}=0$
\end_inset


\end_layout

\begin_layout Standard
or 
\begin_inset Formula $\frac{d^{2}x_{1}}{dx^{2}}+\frac{b}{M}\frac{dx_{1}}{dx}+\frac{k}{M}x_{1}=0$
\end_inset


\end_layout

\begin_layout Standard
or 
\begin_inset Formula $\frac{dx_{2}}{dx}+\frac{b}{M}\frac{dx_{1}}{dx}+\frac{k}{M}x_{1}=0$
\end_inset


\end_layout

\begin_layout Standard
or 
\begin_inset Formula $\frac{dx_{2}}{dx}=-\frac{b}{M}\frac{dx_{1}}{dx}-\frac{k}{M}x_{1}$
\end_inset


\end_layout

\begin_layout Standard
or
\begin_inset Formula $\dot{x}_{2}=-\frac{b}{M}\dot{x}_{1}-\frac{k}{M}x_{1}$
\end_inset


\end_layout

