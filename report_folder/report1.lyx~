\begin_layout Itemize
\begin_inset Formula $\frac{1}{2}M$
\end_inset

(
\begin_inset Formula $\frac{dx_{1}}{dt})^{2}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\frac{1}{2}kx_{1}^{2}$
\end_inset


\end_layout

\begin_layout Subsection*
Task 2:
\end_layout

\begin_layout Standard
List of state variables
\end_layout

\begin_layout Itemize
