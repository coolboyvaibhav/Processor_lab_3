\begin_layout Subsection*
Task 3:
\end_layout

\begin_layout Subsubsection*
State equations
\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\align block
\begin_inset Formula $\mathllap{\mathllap{}}\frac{dx_{1}}{dt}=x_{2}$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\align block
\begin_inset Formula $\Rightarrow\dot{x}_{1}=x_{2}$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\mathllap{\mathllap{}}M\frac{d^{2}x_{1}}{dt^{2}}+b\frac{dx_{1}}{dt}+kx_{1}=0$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\Rightarrow\frac{d^{2}x_{1}}{dt^{2}}+\frac{b}{M}\frac{dx_{1}}{dt}+\frac{k}{M}x_{1}=0$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\Rightarrow\frac{dx_{2}}{dt}+\frac{b}{M}\frac{dx_{1}}{dt}+\frac{k}{M}x_{1}=0$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\Rightarrow\frac{dx_{2}}{dt}=-\frac{b}{M}\frac{dx_{1}}{dt}-\frac{k}{M}x_{1}$
\end_inset


\end_layout

\begin_layout Labeling
\labelwidthstring 00.00.0000
\begin_inset Formula $\Rightarrow\dot{x}_{2}=-\frac{b}{M}\dot{x}_{1}-\frac{k}{M}x_{1}$
\end_inset


\end_layout

